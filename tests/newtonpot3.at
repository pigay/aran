AT_TESTED([newtonpot3])

AT_SETUP(3D Newton potential solver)

AT_CHECK(newtonpot3 -err 1.e-3, 0)
AT_CHECK(newtonpot3 -np 24 -pr 24 -err 1.e-3, 0)
AT_CHECK(newtonpot3 -np 24 -pr 24 -dist random -err 1.e-3, 0)

AT_CHECK(newtonpot3 -np 240 -pr 24 -s 10 -err 1.e-3, 0)
AT_CHECK(newtonpot3 -np 2400 -pr 24 -s 100 -err 1.e-3, 0)


AT_CHECK(newtonpot3 -translation kkylin -err 1.e-3, 0)
AT_CHECK(newtonpot3 -translation kkylin -np 24 -pr 24 -err 1.e-3, 0)
AT_CHECK(newtonpot3 -translation kkylin -np 24 -pr 24 -dist random -err 1.e-3, 0)

AT_CHECK(newtonpot3 -translation kkylin -np 240 -pr 24 -s 10 -err 1.e-3, 0)
AT_CHECK(newtonpot3 -translation kkylin -np 2400 -pr 24 -s 100 -err 1.e-3, 0)


AT_CLEANUP
